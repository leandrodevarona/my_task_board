generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  WONT_DO
}

enum TaskIcon {
  WORK
  MEET
  COFFEE
  GYM
  STUDY
  ALARM
}

model Task {
  id Int @id @default(autoincrement())

  name        String      @default("Task in Progress")
  description String?
  icon        TaskIcon?   @default(WORK)
  status      TaskStatus? @default(TODO)

  TaskBoard   TaskBoard? @relation(fields: [taskBoardId], references: [id])
  taskBoardId Int?
}

model TaskBoard {
  id Int @id @default(autoincrement())

  name        String  @default("My Task Board")
  description String? @default("Tasks to keep organised")

  tasks Task[]
}
